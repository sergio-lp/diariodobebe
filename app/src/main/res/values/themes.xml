<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DiarioDoBebe" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">#000</item>
        <item name="android:colorControlNormal">#000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccentVariant</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="materialAlertDialogTheme">@style/DialogTheme</item>
        <item name="materialTimePickerTheme">@style/PickerTheme</item>
        <item name="materialCalendarTheme">@style/CalendarTheme</item>

        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryDark</item>
        <!-- Customize your theme here. -->

        <item name="textInputOutlinedStyle">@style/Theme.DiarioDoBebe.TextInputLayout</item>
        <item name="textInputStyle">@style/Theme.DiarioDoBebe.TextInputLayout</item>

    </style>

    <style name="Theme.DiarioDoBebe.ActionBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">#000</item>
        <item name="android:windowBackground">@color/dark_gray</item>
        <item name="android:colorBackground">@color/dark_gray</item>
        <item name="android:colorControlNormal">#000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccentVariant</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="materialAlertDialogTheme">@style/DialogTheme</item>
        <item name="materialTimePickerTheme">@style/PickerTheme</item>
        <item name="materialCalendarTheme">@style/CalendarTheme</item>

        <item name="actionModeTheme">@style/Theme.DiarioDoBebe</item>

        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryDark</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.DiarioDoBebe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DiarioDoBebe.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimaryDarker</item>
        <item name="boxStrokeErrorColor">@color/red_error</item>
        <item name="hintTextColor">@color/colorPrimaryDarker</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/colorPrimaryDarker</item>
    </style>

    <style name="PickerTheme" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="colorPrimary">@color/colorPrimaryDarker</item>
    </style>

    <style name="CalendarTheme" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/colorPrimaryDarker</item>
    </style>

    <style name="Theme.DiarioDoBebe.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.DiarioDoBebe.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <color name="red_error">#C62828</color>
</resources>